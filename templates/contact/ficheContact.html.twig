{% extends 'base.html.twig' %}

{% block title %}Fiche Contacts{% endblock %}

{% block body %}

<h1 class="text-center pt-2"> Fiche contact </h1>

<div class="row">

    <div class="card mb-3 container" >
        <h4 class="card-header"> {{ leContact.nom}} {{leContact.prenom }} </h4>
        <div class="row">
        <div class="col-2 d-flex align-items-center">
                <img class="avatar mx-auto my-3" src=" {{ leContact.avatar }} " class="d-block user-select-none" width="100%" aria-label="Placeholder: Image cap"  style="height: auto; max-width: 200px; display: block">
                
        </div>      
            <div class="col">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ leContact.rue}}</li>
                    <li class="list-group-item">{{ leContact.cp}}</li>
                    <li class="list-group-item">{{ leContact.ville}}</li>
                    <li class="list-group-item">{{ leContact.mail}}</li>
                    <li class="list-group-item">  
                    
                        {% if leContact.sexe==0 %}
                            <span class="badge badge-info">homme</span>
                        {% else %}
                            <span class="badge badge-info">femme</span>
                        {% endif %}      

                    </li>
                </ul>
            </div>
        </div>
        
    </div>

        <a href="{{path('app_contacts')}}" class="btn btn-primary btn-block text-center">Revenir Ã  la liste</a>

</div>
{% endblock %}
