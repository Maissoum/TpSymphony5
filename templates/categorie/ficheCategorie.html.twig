{% extends 'base.html.twig' %}

{% block title %}Fiche catégorie{% endblock %}

{% block body %}

<h1 class="text-center pt-2"> Fiche catégorie </h1>

<div class="row">

    <div class="card mb-3 container" >
        <h4 class="card-header"> {{ laCategorie.libelle}}  </h4>
        <div class="row">
        <div class="col-2 d-flex align-items-center">
                <img class="avatar mx-auto my-3" src=" {{asset(laCategorie.image)}} " class="d-block user-select-none" width="100%" aria-label="Placeholder: Image cap"  style="height: auto; max-width: 200px; display: block">
        </div>      
            <div class="col">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ laCategorie.description}}</li>
                 
                </ul>
            </div>
        </div>
        
    </div>

        <a href="{{path('app_categories')}}" class="btn btn-primary btn-block text-center">Revenir à la liste</a>

    <hr>
  

    {% for leContact in laCategorie.contacts %}
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
            {{include('contact/_ficheContact.html.twig', {'mode':'ficheCategorie'})}}
        </div>

{% endfor %}
</div>

</div>
{% endblock %}
